<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<!-- ### Wizards ### -->
	<extension point="org.eclipse.ui.newWizards">
		<category id="AngryViper" name="ANGRYVIPER">
		</category>
		<wizard category="AngryViper" canFinishEarly="false"
			name="OpenCPI Asset Wizard" icon="icons/snake-32.png"
			class="av.proj.ide.wizards.NewOcpiAssetWizard" id="av.proj.ide.wizards.NewOcpiAssetWizard"
			project="true" hasPages="true">
		</wizard>
	</extension>

	<!-- ### Perspective Extensions ### -->
	<extension point="org.eclipse.ui.perspectiveExtensions">
		<perspectiveExtension targetID="org.eclipse.cdt.ui.CPerspective">
			<newWizardShortcut id="av.proj.ide.wizards.NewOcpiAssetWizard" />
		</perspectiveExtension>
	</extension>

	<!-- ### Editors ### -->
	<extension point="org.eclipse.ui.editors">
		<editor id="av.proj.ide.ocs.OCSEditor" name="OCS Editor"
			class="av.proj.ide.ocs.OCSEditor" filenames="*-spec.xml" extensions="xml">
			<contentTypeBinding contentTypeId="av.proj.ide.Ocs" />
			<contentTypeBinding contentTypeId="av.proj.ide.ocs" />
		</editor>
		<editor id="av.proj.ide.ops.OPSEditor" name="OPS Editor"
			filenames="*-proto.xml" extensions="xml">
			<class class="org.eclipse.sapphire.ui.swt.xml.editor.SapphireEditorForXml">
				<parameter name="sdef" value="av.proj.ide.ops.OPSEditor" />
			</class>
			<contentTypeBinding contentTypeId="av.proj.ide.Ops" />
			<contentTypeBinding contentTypeId="av.proj.ide.ops" />
		</editor>
		<editor id="av.proj.ide.owd.rcc.RccWorker" name="OWD RCC Editor"
			extensions="xml">
			<class class="org.eclipse.sapphire.ui.swt.xml.editor.SapphireEditorForXml">
				<parameter name="sdef" value="av.proj.ide.owd.rcc.RccWorker" />
			</class>
			<contentTypeBinding contentTypeId="av.proj.ide.OwdRcc" />
			<contentTypeBinding contentTypeId="av.proj.ide.owdrcc" />
		</editor>
		<editor id="av.proj.ide.owd.hdl.HdlWorker" name="OWD HDL Editor"
			extensions="xml">
			<class class="org.eclipse.sapphire.ui.swt.xml.editor.SapphireEditorForXml">
				<parameter name="sdef" value="av.proj.ide.owd.hdl.HdlWorker" />
			</class>
			<contentTypeBinding contentTypeId="av.proj.ide.OwdHdl" />
			<contentTypeBinding contentTypeId="av.proj.ide.owdhdl" />
		</editor>
		<editor id="av.proj.ide.oas.OASEditor" class="av.proj.ide.oas.OASEditor"
			name="OAS Editor" extensions="xml">
			<contentTypeBinding contentTypeId="av.proj.ide.App" />
			<contentTypeBinding contentTypeId="av.proj.ide.app" />
		</editor>
		<editor id="av.proj.ide.ohad.OHADEditor" class="av.proj.ide.ohad.OHADEditor"
			name="OHAD Editor" extensions="xml">
			<contentTypeBinding contentTypeId="av.proj.ide.Hdl" />
			<contentTypeBinding contentTypeId="av.proj.ide.hdl" />
		</editor>
		<editor id="av.proj.ide.test.editor" name="Unit Test Editor"
			extensions="xml">
			<class class="org.eclipse.sapphire.ui.swt.xml.editor.SapphireEditorForXml">
				<parameter name="sdef" value="av.proj.ide.testeditor.UnitTestEditor" />
			</class>
			<contentTypeBinding contentTypeId="av.proj.ide.Unittests.upper" />
			<contentTypeBinding contentTypeId="av.proj.ide.unittests.lower" />
		</editor>
		<editor id="av.proj.ide.hplat.HdlPlatform" name="HDL Platform Editor"
			class="av.proj.ide.hplat.HdlPlatformEditor" extensions="xml">
			<!-- Above w/ class=".. launches the editor. below the the sdef file is 
				used. The current impl needs to launch the editor so a check/set a dependent 
				attribute is performed. <class class="org.eclipse.sapphire.ui.swt.xml.editor.SapphireEditorForXml"> 
				<parameter name="sdef" value="av.proj.ide.hplat.HdlPlatformEditor"/> </class> -->
			<contentTypeBinding contentTypeId="av.proj.ide.Hplat" />
			<contentTypeBinding contentTypeId="av.proj.ide.hplat" />
		</editor>
		<editor id="av.proj.ide.hdl.signal.SignalsFileEditor"  name="Signals File Editor"
			 class="av.proj.ide.hdl.signal.SignalsFileEditor"  extensions="xml">
			<contentTypeBinding contentTypeId="av.proj.ide.hdl.signals.upper" />
			<contentTypeBinding contentTypeId="av.proj.ide.hdl.signals.lower" />
		</editor>
		<editor id="av.proj.ide.hdl.slot.SlotFileEditor"  name="Slot File Editor"
			 class="av.proj.ide.hdl.slot.SlotFileEditor"  extensions="xml">
			<contentTypeBinding contentTypeId="av.proj.ide.hdl.slot.upper" />
			<contentTypeBinding contentTypeId="av.proj.ide.hdl.slot.lower" />
		</editor>
	</extension>

