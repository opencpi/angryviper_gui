		</content-type>

		<!-- HPLAT Content Type -->
		<content-type id="av.proj.ide.Hplat" priority="high"
			name="HPLAT Content Type" file-extensions="xml"
			base-type="org.eclipse.core.runtime.xml">
			<describer
				class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber2">
