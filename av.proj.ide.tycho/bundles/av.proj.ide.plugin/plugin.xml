			</describer>
		</content-type>

	</extension>

	<!-- ### Commands ### -->
	<extension point="org.eclipse.ui.commands">
		<command defaultHandler="av.proj.ide.commands.NewAssetHandler"
			id="av.proj.ide.commands.NewAsset" name="Create a New OpenCPI Asset">
		</command>
	</extension>

	<!-- ### Menus ### -->
	<extension point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:common.new.menu?before=new">
			<command commandId="av.proj.ide.commands.NewAsset" icon="icons/snake-32.png"
				label="ANGRYVIPER OpenCPI Asset Wizard" style="push">
				<visibleWhen checkEnabled="false"></visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension point="org.eclipse.ui.views">
		<category id="av.proj.ide.plugin" name="ANGRYVIPER Project">
		</category>
		<view category="av.proj.ide.plugin" class="av.proj.ide.plugin.views.AVProjectView"
			icon="icons/Toolbox.gif" id="av.proj.ide.plugin.views.AVProjectView"
			name="OpenCPI Projects">
		</view>
		<view category="av.proj.ide.plugin" class="av.proj.ide.plugin.views.AVComponentsView"
			icon="icons/Component.gif" id="av.proj.ide.plugin.views.AVComponentsView"
			name="OpenCPI Components">
		</view>
		<view category="av.proj.ide.plugin" class="av.proj.ide.plugin.views.AVMainOperationView"
			icon="icons/Toolbox.gif" id="av.proj.ide.plugin.views.MainOperationView"
			name="Project Operations">
		</view>
		<view category="av.proj.ide.plugin" class="av.proj.ide.plugin.views.AVBuildStatusView"
			icon="icons/Toolbox.gif" id="av.proj.ide.plugin.views.BuildStatusView"
			name="Build Status">
		</view>
	</extension>
	<extension point="org.eclipse.ui.perspectives">
		<perspective class="av.proj.ide.perspective.AngryViperPerspectiveFactory"
			id="av.ide.angryViperPerspective" icon="icons/snake-24.png" name="ANGRYVIPER Perspective" />
	</extension>
	<!-- Messing around -->
	<extension point="org.eclipse.ui.perspectiveExtensions">
		<perspectiveExtension targetID="org.eclipse.debug.ui.DebugPerspective">
			<actionSet id="org.eclipse.jdt.debug.ui.JDTDebugActionSet" />
			<view id="org.eclipse.jdt.debug.ui.DisplayView" relative="org.eclipse.debug.ui.ExpressionView"
				relationship="stack" />
			<view id="org.eclipse.jdt.ui.PackageExplorer" relative="org.eclipse.debug.ui.DebugView"
				relationship="stack" visible="true" />
			<view id="org.eclipse.jdt.ui.TypeHierarchy" relative="org.eclipse.debug.ui.DebugView"
				relationship="stack" visible="false" />
			<view id="org.eclipse.search.SearchResultView" relative="org.eclipse.debug.ui.ConsoleView"
				relationship="stack" visible="false" />
			<viewShortcut id="org.eclipse.jdt.debug.ui.DisplayView" />
		</perspectiveExtension>
	</extension>

</plugin>
