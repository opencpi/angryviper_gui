		<!-- Signals Content Type -->
		<content-type id="av.proj.ide.hdl.signals.lower" priority="high"
			name="Signals File Content Type" file-extensions="xml"
			base-type="org.eclipse.core.runtime.xml">
			<describer
				class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber2">
				<parameter name="element" value="signals" />
			</describer>
		</content-type>
		
		<content-type id="av.proj.ide.hdl.signals.upper" priority="high"
			name="Signals File Content Type" file-extensions="xml"
