			<describer
				class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber2">
				<parameter name="element" value="HdlWorker" />
			</describer>
		</content-type>
		<content-type id="av.proj.ide.owdhdl" priority="high"
			name="OWD HDL Content Type" file-extensions="xml"
			base-type="org.eclipse.core.runtime.xml">
			<describer
				class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber2">
				<parameter name="element" value="hdlworker" />
			</describer>
		</content-type>
		<!-- OAS Content Type -->
		<content-type id="av.proj.ide.OwdRcc" priority="high"
			name="OWD RCC Content Type" file-extensions="xml"
			base-type="org.eclipse.core.runtime.xml">
			<describer
				class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber2">
				<parameter name="element" value="RccWorker" />
			</describer>
		</content-type>
		<content-type id="av.proj.ide.owdrcc" priority="high"
			name="OWD RCC Content Type" file-extensions="xml"
			base-type="org.eclipse.core.runtime.xml">
			<describer
				class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber2">
				<parameter name="element" value="rccworker" />
			</describer>
		</content-type>
		<!-- OHAD Content Type -->
		<content-type id="av.proj.ide.Hdl" priority="high"
			name="OHAD Content Type" file-extensions="xml"
			base-type="org.eclipse.core.runtime.xml">
			<describer
				class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber2">
				<parameter name="element" value="HdlAssembly" />
			</describer>
		</content-type>
		<content-type id="av.proj.ide.hdl" priority="high"
			name="OHAD Content Type" file-extensions="xml"
			base-type="org.eclipse.core.runtime.xml">
			<describer
				class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber2">
				<parameter name="element" value="hdlassembly" />
			</describer>
		</content-type>
		
		<!-- Unit Test Content Type -->
		<content-type id="av.proj.ide.unittests.lower" priority="high"
			name="Unit Test Content Type" file-extensions="xml"
			base-type="org.eclipse.core.runtime.xml">
			<describer
				class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber2">
				<parameter name="element" value="tests" />
			</describer>
		</content-type>
		
		<content-type id="av.proj.ide.Unittests.upper" priority="high"
			name="Unit Test Content Type" file-extensions="xml"
			base-type="org.eclipse.core.runtime.xml">
			<describer
				class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber2">
				<parameter name="element" value="Tests" />
