<definition>

	<composite>
		<id>OwdSpecPropertyAccessibilityForm</id>
		<content>
		
			<section>
				<label>SpecProperty Accessibility</label>
				<content>
				
			<split-form>
				<block>
					<content>
						<section>
							<label>Does the App Set it?</label>
							<content>
								<property-editor>
									<hint>
										<name>checkbox.layout</name>
										<value>leading.label</value>
									</hint>
									<property>Initial</property>
									<style>Sapphire.PropertyEditor.CheckBoxGroup.Horizontal</style>
								</property-editor>
								<property-editor>
									<hint>
										<name>checkbox.layout</name>
										<value>leading.label</value>
									</hint>
									<property>Writable</property>
									<style>Sapphire.PropertyEditor.CheckBoxGroup.Horizontal</style>
								</property-editor>
							</content>
						</section>
					</content>
				</block>
				<block>
					<content>
						<section>
							<label>Does the Worker Change it?</label>
							<content>
								<property-editor>
									<hint>
										<name>checkbox.layout</name>
										<value>leading.label</value>
									</hint>
									<property>Volatile</property>
									<style>Sapphire.PropertyEditor.CheckBoxGroup.Horizontal</style>
								</property-editor>
								<property-editor>
									<hint>
										<name>checkbox.layout</name>
										<value>leading.label</value>
									</hint>
									<property>Readable</property>
									<style>Sapphire.PropertyEditor.CheckBoxGroup.Horizontal</style>
                                            <show-label>true</show-label>
                                            <label>Readable</label>
								</property-editor>
							</content>
						</section>
					</content>
				</block>
                <margin-bottom>-12</margin-bottom>
			</split-form>

				</content>
				
				<collapsible>true</collapsible>
				<collapsed-initially>false</collapsed-initially>
                <description>There are a number of considerations when modifying OCS properties in the OWD. Please review documentation.</description>
			</section>

		</content>
	</composite>

</definition>

